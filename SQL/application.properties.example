# ============================================
# Merchant Manager CRM - Database Configuration
# ============================================
# Copy this to src/main/resources/application.properties
# and update with your database credentials
# ============================================

# ============================================
# DATABASE CONFIGURATION
# ============================================
spring.datasource.url=jdbc:postgresql://localhost:5432/merchant_manager_crm
spring.datasource.username=postgres
spring.datasource.password=your_password_here
spring.datasource.driver-class-name=org.postgresql.Driver

# ============================================
# JPA / HIBERNATE CONFIGURATION
# ============================================
# Use 'validate' to ensure schema matches entities without modifying database
# Use 'update' only in development (not recommended)
# Use 'none' in production with manual migrations
spring.jpa.hibernate.ddl-auto=validate
spring.jpa.database-platform=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.use_sql_comments=true

# ============================================
# HIBERNATE SPECIFIC PROPERTIES
# ============================================
# Enable JSONB type support
spring.jpa.properties.hibernate.types.jackson.object.mapper=merchant_manager.config.HibernateObjectMapperSupplier

# Second level cache (optional)
# spring.jpa.properties.hibernate.cache.use_second_level_cache=true
# spring.jpa.properties.hibernate.cache.region.factory_class=org.hibernate.cache.jcache.JCacheRegionFactory

# ============================================
# CONNECTION POOL (HikariCP)
# ============================================
spring.datasource.hikari.maximum-pool-size=10
spring.datasource.hikari.minimum-idle=5
spring.datasource.hikari.connection-timeout=30000
spring.datasource.hikari.idle-timeout=600000
spring.datasource.hikari.max-lifetime=1800000
spring.datasource.hikari.auto-commit=true
spring.datasource.hikari.pool-name=MerchantManagerHikariCP

# ============================================
# SQL LOGGING (Development)
# ============================================
# Enable for debugging
# logging.level.org.hibernate.SQL=DEBUG
# logging.level.org.hibernate.type.descriptor.sql.BasicBinder=TRACE
# logging.level.org.springframework.jdbc.core=DEBUG

# ============================================
# PRODUCTION SETTINGS
# ============================================
# Uncomment for production use

# Disable SQL logging
# spring.jpa.show-sql=false

# Enable connection validation
# spring.datasource.hikari.connection-test-query=SELECT 1

# SSL Configuration (if required)
# spring.datasource.url=jdbc:postgresql://localhost:5432/merchant_manager_crm?ssl=true&sslmode=require

# ============================================
# ENVIRONMENT VARIABLES (Recommended for Production)
# ============================================
# Instead of hardcoding credentials, use environment variables:
# spring.datasource.url=jdbc:postgresql://${DB_HOST:localhost}:${DB_PORT:5432}/${DB_NAME:merchant_manager_crm}
# spring.datasource.username=${DB_USERNAME:postgres}
# spring.datasource.password=${DB_PASSWORD:}

# ============================================
# FLYWAY MIGRATION (Optional)
# ============================================
# Uncomment to enable Flyway for database migrations
# spring.flyway.enabled=true
# spring.flyway.locations=classpath:db/migration
# spring.flyway.baseline-on-migrate=true
# spring.flyway.baseline-version=0

# ============================================
# LIQUIBASE MIGRATION (Alternative)
# ============================================
# Uncomment to enable Liquibase for database migrations
# spring.liquibase.enabled=true
# spring.liquibase.change-log=classpath:db/changelog/db.changelog-master.yaml

# ============================================
# REQUIRED DEPENDENCIES
# ============================================
# Add these to your pom.xml:

# PostgreSQL Driver
# <dependency>
#     <groupId>org.postgresql</groupId>
#     <artifactId>postgresql</artifactId>
#     <scope>runtime</scope>
# </dependency>

# Hibernate Types (for JSONB support)
# <dependency>
#     <groupId>com.vladmihalcea</groupId>
#     <artifactId>hibernate-types-60</artifactId>
#     <version>2.21.1</version>
# </dependency>

# HikariCP (usually included with Spring Boot)
# <dependency>
#     <groupId>com.zaxxer</groupId>
#     <artifactId>HikariCP</artifactId>
# </dependency>

# ============================================
# TROUBLESHOOTING
# ============================================
# 1. Connection refused:
#    - Verify PostgreSQL is running
#    - Check hostname and port
#    - Verify firewall settings

# 2. Authentication failed:
#    - Check username and password
#    - Verify pg_hba.conf settings
#    - Ensure database exists

# 3. JSONB errors:
#    - Ensure hibernate-types dependency is added
#    - Verify PostgreSQL version >= 9.4

# 4. Schema validation errors:
#    - Run 04_verify_schema.sql to check schema
#    - Ensure entity annotations match database schema
#    - Check for missing or incorrect column types
