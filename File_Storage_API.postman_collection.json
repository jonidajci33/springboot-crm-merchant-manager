{
	"info": {
		"_postman_id": "file-storage-api-collection",
		"name": "File Storage API",
		"description": "Collection for File Storage endpoints including signed URL generation",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get Signed URL",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/files/signed-url/:fileId",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"files",
						"signed-url",
						":fileId"
					],
					"variable": [
						{
							"key": "fileId",
							"value": "1",
							"description": "The ID of the file"
						}
					]
				},
				"description": "Create or retrieve a cached signed URL for secure file access with 1 hour expiration. If a valid cached URL exists (less than 1 hour old), returns the cached URL. Otherwise, creates a new signed URL and updates the cache."
			},
			"response": [
				{
					"name": "Success Response",
					"originalRequest": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/files/signed-url/1",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"files",
								"signed-url",
								"1"
							]
						}
					},
					"status": "OK",
					"code": 200,
					"_postman_previewlanguage": "json",
					"header": [
						{
							"key": "Content-Type",
							"value": "application/json"
						}
					],
					"cookie": [],
					"body": "{\n    \"fileId\": 1,\n    \"signedUrl\": \"https://your-supabase-url.supabase.co/storage/v1/object/sign/bucket-name/file.pdf?token=...\"\n}"
				},
				{
					"name": "Error Response",
					"originalRequest": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/files/signed-url/999",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"files",
								"signed-url",
								"999"
							]
						}
					},
					"status": "Bad Request",
					"code": 400,
					"_postman_previewlanguage": "json",
					"header": [
						{
							"key": "Content-Type",
							"value": "application/json"
						}
					],
					"cookie": [],
					"body": "{\n    \"status\": \"error\",\n    \"message\": \"File not found with id: 999\"\n}"
				}
			]
		},
